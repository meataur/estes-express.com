<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.estes.myestes.terminalist</groupId>
    <artifactId>TerminalList</artifactId>
    <version>${project.version}</version>
  </parent>
  <artifactId>TerminalListEAR</artifactId>
  <packaging>ear</packaging>
	<description>!!!EAR resources from the root directory need to be moved under src/main/application!!!</description>
<build>
		<plugins>
			<plugin>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<version>5</version>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<modules>
						<webModule>
							<groupId>com.estes.myestes.terminalist</groupId>
							<artifactId>TerminalListWeb</artifactId>
							<bundleFileName>TerminalListWeb.war</bundleFileName>
							<contextRoot>api/myestes/TerminalList/v1.0</contextRoot>
						</webModule>
					</modules>
					<displayName>TerminalListEAR</displayName>
					<generateApplicationXml>true</generateApplicationXml>
					<applicationXml>${basedir}/target/application.xml</applicationXml>
				</configuration>
			</plugin>
		</plugins>
	</build>
  <dependencies>		
		<dependency>
			<groupId>com.estes.myestes.terminalist</groupId>
			<artifactId>TerminalListWeb</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>
</project>
