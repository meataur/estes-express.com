<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>OAuth2-Parent</groupId>
    <artifactId>OAuth2-Parent</artifactId>
    <version>0.0.3.2</version>
  </parent>
  <artifactId>OAuth2EAR</artifactId>
  <packaging>ear</packaging>
  
  <build>
  	<plugins>
  		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-compiler-plugin</artifactId>
			<version>3.5.1</version>
			<configuration>
				<source>1.8</source>
				<target>1.8</target>
			</configuration>
		</plugin>
  		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-ear-plugin</artifactId>
			<version>2.3.2</version>
			<configuration>
				<version>5</version>
				<defaultLibBundleDir>lib</defaultLibBundleDir>
				<modules>
					<webModule>
						<groupId>OAuth2-Parent</groupId>
						<artifactId>OAuth2WAR</artifactId>
						<contextRoot>/security</contextRoot>
					</webModule>
				</modules>					
				<displayName>OAuth2Ear</displayName>
				<generateApplicationXml>true</generateApplicationXml>
				<applicationXml>${basedir}/target/application.xml</applicationXml>	
				<archive>
	                <manifest>
	                   <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
	                </manifest>
	                <manifestEntries>
	                   <Implementation-Version>${build.number}</Implementation-Version>
	                   <Built-By>oauth2</Built-By>
	                </manifestEntries>
                  </archive>
			</configuration>
		</plugin>
  	</plugins>
  </build>
  
  <dependencies>
  	<dependency>
  		<groupId>OAuth2-Parent</groupId>
  		<artifactId>OAuth2WAR</artifactId>
  		<version>0.0.3.2</version>
  		<type>war</type>
  	</dependency>
  </dependencies>
</project>